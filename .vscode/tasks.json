{
  // VS Code tasks for Codespaces
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Flutter: web run",
      "type": "shell",
      "command": "flutter run -d chrome --web-port 8080 --web-renderer auto",
      "options": {
        "cwd": "/workspace"
      },
      "problemMatcher": []
    },
    {
      "label": "Firebase: emulators",
      "type": "shell",
      "command": "firebase emulators:start --import=./.firebase/emulator-data --export-on-exit --project groumap-deda4",
      "options": {
        "cwd": "/workspace"
      },
      "problemMatcher": []
    },
    {
      "label": "Functions: build+serve",
      "type": "shell",
      "command": "pnpm -C backend/functions run serve",
      "problemMatcher": []
    }
  ]
}

