{
  "name": "GrouMap Codespaces",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {},
  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.dart-code",
        "Dart-Code.flutter",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
      ]
    }
  },
  "remoteUser": "vscode",
  "postCreateCommand": "/workspace/scripts/setup_codespaces.sh || true",
  "forwardPorts": [
    4000,
    4400,
    4500,
    5001,
    8080,
    8085,
    8081,
    9199,
    9099,
    8088,
    9005
  ],
  "portsAttributes": {
    "8080": { "label": "Flutter Web" },
    "5001": { "label": "Functions Emulator" },
    "4000": { "label": "Firebase Emulator UI" }
  },
  "mounts": [
    "source=${localEnv:HOME}/.cache,destination=/home/vscode/.cache,type=bind,consistency=cached"
  ]
}

